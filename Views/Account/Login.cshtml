@{
    ViewBag.Title = "SIGN IN / SIGN UP";
    

}
<div asp-validation-summary="All" class="text-danger"></div>

<main class="form-container">

    <section class="signup-section">

        <h2 class="mb-4">
            <i class="fas fa-lock me-2" style="color:#00BFFF;"></i>
            Login and Registration
        </h2>


        <ul class="nav nav-tabs nav-fill mb-4" id="loginRegisterTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active"
                        id="login-tab"
                        data-bs-toggle="tab"
                        data-bs-target="#login-pane"
                        type="button"
                        role="tab"
                        aria-controls="login-pane"
                        aria-selected="true"
                        style="color:#00BFFF; background-color:#1a1a1a; border-color:#333;">
                    SIGN IN
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link"
                        id="register-tab"
                        data-bs-toggle="tab"
                        data-bs-target="#register-pane"
                        type="button"
                        role="tab"
                        aria-controls="register-pane"
                        aria-selected="false"
                        style="color:#00BFFF; background-color:#1a1a1a; border-color:#333;">
                    SIGN UP
                </button>
            </li>
        </ul>

        <div class="tab-content" id="loginRegisterTabContent">

            <div class="tab-pane fade show active"
                 id="login-pane"
                 role="tabpanel"
                 aria-labelledby="login-tab"
                 tabindex="0">

                <form asp-action="Login" asp-controller="Account" method="post" class="signin-form login-form">



                    <div class="form-group mb-3">
                        <label for="login-email" class="form-label">E-mail:</label>
                        <input type="email"
                               id="login-email"
                               name="email"
                               class="form-control"
                               required />
                    </div>

                    <div class="form-group mb-4">
                        <label for="login-password" class="form-label">Password:</label>
                        <input type="password"
                               id="login-password"
                               name="password"
                               class="form-control"
                               required />
                    </div>

                    <div class="d-flex justify-content-between mb-4">
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   id="rememberMe"
                                   name="rememberMe"
                                   style="background-color:#333; border-color:#555;" />
                            <label class="form-check-label" for="rememberMe">
                                Remember Me
                            </label>
                        </div>
                        <a href="#" style="font-size:0.9em;">Forgot Password?</a>
                    </div>

                    <button type="submit" class="submit-btn">
                        SIGN IN
                    </button>
                </form>
            </div>

            <div class="tab-pane fade"
                 id="register-pane"
                 role="tabpanel"
                 aria-labelledby="register-tab"
                 tabindex="0">

                <form asp-action="Register" asp-controller="Account" method="post" class="signup-form">
                    @Html.AntiForgeryToken()


                    <fieldset>
                        <legend style="color:#00BFFF;">Personal Information</legend>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="name" class="form-label">Name:</label>
                                <input type="text"
                                       id="name"
                                       name="name"
                                       class="form-control"
                                       required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="surname" class="form-label">Surname:</label>
                                <input type="text"
                                       id="surname"
                                       name="surname"
                                       class="form-control"
                                       required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="country" class="form-label">Country:</label>
                                <input type="text"
                                       id="country"
                                       name="country"
                                       class="form-control"
                                       required />
                            </div>
                           
                            <div class="col-md-6 mb-3">
                                <label for="city" class="form-label">City:</label>
                                <input type="text"
                                       id="city"
                                       name="city"
                                       class="form-control"
                                       required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label d-block">Gender:</label>
                            <div class="radio-group d-flex gap-3">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input"
                                           type="radio"
                                           id="male"
                                           name="gender"
                                           value="male"
                                           required />
                                    <label class="form-check-label" for="male">Male</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input"
                                           type="radio"
                                           id="female"
                                           name="gender"
                                           value="female" />
                                    <label class="form-check-label" for="female">Female</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input"
                                           type="radio"
                                           id="other"
                                           name="gender"
                                           value="other" />
                                    <label class="form-check-label" for="other">Other</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="birthdate" class="form-label">Birth Date:</label>
                            <input type="date"
                                   id="birthdate"
                                   name="birthdate"
                                   class="form-control"
                                   required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="phone" class="form-label">Phone:</label>
                            <input type="text"
                                   id="phone"
                                   name="phone"
                                   class="form-control"
                                   required />
                        </div>
                    </fieldset>

                    <fieldset>
                        <legend style="color:#00BFFF;">Account Information</legend>

                        <div class="form-group mb-3">
                            <label for="register-email" class="form-label">E-mail:</label>
                            <input type="email"
                                   id="register-email"
                                   name="email"
                                   class="form-control"
                                   required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="register-username" class="form-label">Username:</label>
                            <input type="text"
                                   id="register-username"
                                   name="username"
                                   class="form-control"
                                   required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="register-password" class="form-label">Create Password:</label>
                            <input type="password"
                                   id="register-password"
                                   name="password"
                                   class="form-control"
                                   required
                                   minlength="6" />
                        </div>

                        <div class="form-group mb-3">
                            <label for="confirm-password" class="form-label">Password Again:</label>
                            <input type="password"
                                   id="confirm-password"
                                   name="confirmPassword"
                                   class="form-control"
                                   required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label d-block">Robot Check:</label>
                            <div class="d-flex align-items-center gap-2">
                                <span id="robot-question"
                                      class="fw-semibold"
                                      style="min-width:120px;"></span>
                                <input type="number"
                                       id="robot-answer"
                                       name="robotAnswer"
                                       class="form-control"
                                       style="max-width:130px;"
                                       placeholder="Answer" />
                            </div>
                            <small id="robot-error" class="text-danger"></small>
                        </div>
                    </fieldset>

                    <button type="submit" class="submit-btn">
                        COMPLETE REGISTRATION
                    </button>
                </form>
            </div>

        </div>

    </section>

</main>



<script src="~/js/signIn2.js" asp-append-version="true"></script>
<link rel="stylesheet" href="css/style.css">
