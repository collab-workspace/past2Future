@{
    ViewBag.Title = "Feedback";
}

<div class="form-container">

    <section class="feedback-section">
        <h2>
            <i class="fas fa-envelope me-2" style="color:#00BFFF;"></i>
            We Value Your Feedback
        </h2>
        <p style="color:#aaa;">
            How can we make our project even better? Share your ideas, suggestions, and any errors you’ve noticed with us.
        </p>

        <form asp-controller="Home" asp-action="SubmitFeedback" method="post" class="feedback-form">
            @Html.AntiForgeryToken()



           

            <div class="form-group mb-3">
                <label for="feedback-type" class="form-label">Feedback Type:</label>
                <select id="feedback-type" name="type" class="form-select" required>
                    <option value="suggestion">Suggestion</option>
                    <option value="bug">Bug Report</option>
                    <option value="general">General Opinion</option>
                    <option value="content">About Content</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="feedback-message" class="form-label">Your message:</label>
                <textarea id="feedback-message" name="message" rows="7" class="form-control" required
                          placeholder="Please describe your feedback in detail...."></textarea>
            </div>

            <button type="submit" class="submit-btn" id="send-feedback-btn">
                <i class="fas fa-paper-plane me-2"></i> SEND
            </button>

            <div id="envelope-animation-area" class="text-center">
                <i class="fas fa-envelope-open-text envelope-icon" style="display:none;"></i>
            </div>
        </form>
    </section>

</div>
