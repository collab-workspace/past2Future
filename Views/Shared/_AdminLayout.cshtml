@{
    Layout = null;
    var pageTitle = ViewBag.Title ?? "PAST2FUTURE • ADMIN";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@pageTitle</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <!-- Sitenin ana CSS'i -->
    <link rel="stylesheet" href="/css/style.css" />

    <!-- Admin override (zıt tema + kırmızı vurgu) -->
    <link rel="stylesheet" href="/css/admin.css" />

    @RenderSection("Styles", required: false)
</head>

<!-- Admin: zıt tema = light-mode + admin-mode -->
<body class="admin-mode">

    <!-- Loading screen senin layout’taki gibi kalsın -->
    <div id="loading-screen">
        <div class="loader"></div>
        <p class="loading-text">LOADING ADMIN PANEL...</p>
    </div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark admin-navbar">
            <div class="container-fluid">

                <a class="navbar-brand" href="/Events/Index">
                    <i class="bi bi-shield-lock-fill me-2"></i>ADMIN • PAST2FUTURE
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Events" asp-action="Index">
                                <i class="bi bi-calendar-event me-1"></i>EVENTS (ADMIN)
                            </a>
                        </li>

                       <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Feedbacks">
                                <i class="bi bi-chat-left-text me-1"></i>FEEDBACKS
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Countries">
                                <i class="bi bi-flag me-1"></i>COUNTRIES
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-box-arrow-up-right me-1"></i>GO TO SITE
                            </a>
                        </li>
                        


                    </ul>
                    <button id="theme-toggle" class="btn btn-sm btn-outline-light me-3 ms-3">
                        ☀️ Light Mode
                    </button>
                    <!-- Admin bandı -->
                    <span class="admin-badge">
                        <i class="bi bi-exclamation-triangle-fill me-1"></i>ADMIN MODE
                    </span>
                    <a class="btn btn-sm btn-dark ms-3"
                       asp-controller="Account"
                       asp-action="Logout">
                        <i class="bi bi-box-arrow-right me-1"></i> EXIT
                    </a>


                </div>
            </div>
        </nav>
    </header>

    <main class="admin-page container py-4">
        @await Html.PartialAsync("_FlashMessages")
        @RenderBody()
    </main>


    <footer class="container py-5 text-center">
        <p class="text-secondary small mb-0">© 2025 PAST2FUTURE • ADMIN</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <!-- theme.js senin loading-screen'i kapatıyor; ama admin'de toggle yok diye patlamasın diye aşağıda theme.js'i patch’leyeceğiz -->
    <script src="/js/theme.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

