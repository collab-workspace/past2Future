@model IEnumerable<Past2Future.Models.Event>
@{
   
    if (Context.Session.GetString("IsAdmin") == "true")
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-light">Events</h2>
        <a asp-action="Create" class="btn btn-success">+ Add New</a>
    </div>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Type</th>
                <th>Country</th>
                <th>Date</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>
                        @if (item.Type == "Past")
                        {
                            <span class="badge bg-secondary">Past</span>
                        }
                        else
                        {

                            <span class="badge bg-primary">Future</span>
                        }
                    </td>
                    <td>@item.Country</td>
                    <td>@item.Date.ToString("dd.MM.yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>